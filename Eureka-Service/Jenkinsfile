node {


        stage('Checkout') {

            git url: 'https://github.com/BenSalem-ChamsEddine/PFE.git', credentialsId:  'git-credit-ID', branch: 'master'

        }

        stage('Build') {
	  dir ('Eureka-Service') {

            sh 'mvn clean package'

            def pom = readMavenPom file:'pom.xml'

            print pom.version

            env.version = pom.version
	  }
        }

        stage('Image') {

            dir ('Eureka-Service') {

	      docker.build "pfe_eurekaservice"
	
            }

        }

        stage ('Run') {

            docker.image("pfe_eurekaservice").run('-p 8761:8761 --expose=8761 -t pfe_eurekaservice:latest')

        }

        stage ('Final') {

            build job: 'Proxy-Service-Pipeline', wait: false

        }      

}
